  <!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="Hau Nguyen">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title><%= @UserInfo.Name %></title>

    <!-- Fontfaces CSS-->
    <link href=" /assets/admin/font-face.css" rel="stylesheet" media="all">
    <link href=" /assets/admin/font-awesome.min.css" rel="stylesheet" media="all">
    <link href=" /assets/admin/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href=" /assets/admin/material-design-iconic-font.min.css" rel="stylesheet" media="all">

    <!-- Bootstrap CSS-->
    <link href=" /assets/admin/bootstrap.min.css" rel="stylesheet" media="all">

    <!-- Vendor CSS-->
    <link href=" /assets/admin/animsition.min.css" rel="stylesheet" media="all">
    <link href=" /assets/admin/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href=" /assets/admin/animate.css" rel="stylesheet" media="all">
    <link href=" /assets/admin/hamburgers.min.css" rel="stylesheet" media="all">
    <link href=" /assets/admin/slick.css" rel="stylesheet" media="all">
    <link href=" /assets/admin/select2.min.css" rel="stylesheet" media="all">
    <link href=" /assets/admin/perfect-scrollbar.css" rel="stylesheet" media="all">
    <link href=" /assets/admin/jqvmap.min.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href=" /assets/admin/theme.css" rel="stylesheet" media="all">

    <!-- Style CSS -->
    <link href="/assets/admin/style.css" rel="stylesheet" media="all">

</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar2">
            <div class="logo">
                <a href="/dash-board">
                    <img src=" /assets/logo-white.png" alt="Cool Admin" />
                </a>
            </div>
            <div class="menu-sidebar2__content js-scrollbar1">
                <div class="account2">
                    <div class="image img-cir img-120">
                        <img src="/assets/ava-<%= @UserInfo.ID %>.png" alt="<%= @UserInfo.ID %>" style="height:120px;width:120px;object-fit:cover" onerror="this.src='/assets/ava-default.png'"/>
                    </div>
                    <h4 class="name"><%= @UserInfo.UserName %></h4>
                    <a href="/sign-out">Sign out</a>
                </div>
                <nav class="navbar-sidebar2">
                    <ul class="list-unstyled navbar__list">
                      <li class="active has-sub">
                        <a class="js-arrow" href="#">
                          <i class="fas fa-tachometer-alt"></i>Dashboard
                        </a>
                      </li>
                      <li class="has-sub">
                        <a class="js-arrow" href="#">
                          <i class="fas fa-cloud"></i>Website settings
                            <span class="arrow">
                              <i class="fas fa-angle-down"></i>
                            </span>
                        </a>
                        <ul class="list-unstyled navbar__sub-list js-sub-list">
                          <li>
                            <a href="/users">
                            <i class="fa fa-check"></i>Users</a>
                          </li>
                          <li class="has-sub">
                            <a class="js-arrow" href="#">
                              <i class="fas fa-cloud"></i>Campuses
                                <span class="arrow">
                                  <i class="fas fa-angle-down"></i>
                                </span>
                            </a>
                            <ul class="list-unstyled navbar__sub-list js-sub-list">
                              <% @campuses = Campuses.all %>
                              <% if @campuses != nil then %>
                                <% @campuses.each do |c| %>
                                <li>
                                  <a href="/campus/<%= c.ID %>">
                                  <i class="fa"></i><%= c.Name %></a>
                                </li>
                                <% end %>
                              <% end %>
                              <li>
                                <a data-target="#AddCampus" data-toggle="modal" href="#AddCampus">
                                <i class="fa fa-plus"></i>Add more campus</a>
                              </li>
                            </ul>
                          </li>
                        </ul>
                      </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container2">
            <!-- HEADER DESKTOP-->
            <header class="header-desktop2">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="header-wrap2">
                            <div class="logo d-block d-lg-none">
                                <a href="#">
                                    <img src=" /assets/logo-white.png" alt="CoolAdmin" />
                                </a>
                            </div>
                            <div class="header-button2">
                                <div class="header-button-item js-item-menu">
                                    <i class="zmdi zmdi-search"></i>
                                    <div class="search-dropdown js-dropdown">
                                        <form action="">
                                            <input class="au-input au-input--full au-input--h65" type="text" placeholder="Search for datas &amp; reports..." />
                                            <span class="search-dropdown__icon">
                                                <i class="zmdi zmdi-search"></i>
                                            </span>
                                        </form>
                                    </div>
                                </div>
                                <div class="header-button-item has-noti js-item-menu">
                                    <i class="zmdi zmdi-notifications"></i>
                                    <div class="notifi-dropdown js-dropdown">
                                        <div class="notifi__title">
                                            <p>You have 3 Notifications</p>
                                        </div>
                                        <div class="notifi__item">
                                            <div class="bg-c1 img-cir img-40">
                                                <i class="zmdi zmdi-email-open"></i>
                                            </div>
                                            <div class="content">
                                                <p>You got a email notification</p>
                                                <span class="date">April 12, 2018 06:50</span>
                                            </div>
                                        </div>
                                        <div class="notifi__item">
                                            <div class="bg-c2 img-cir img-40">
                                                <i class="zmdi zmdi-account-box"></i>
                                            </div>
                                            <div class="content">
                                                <p>Your account has been blocked</p>
                                                <span class="date">April 12, 2018 06:50</span>
                                            </div>
                                        </div>
                                        <div class="notifi__item">
                                            <div class="bg-c3 img-cir img-40">
                                                <i class="zmdi zmdi-file-text"></i>
                                            </div>
                                            <div class="content">
                                                <p>You got a new file</p>
                                                <span class="date">April 12, 2018 06:50</span>
                                            </div>
                                        </div>
                                        <div class="notifi__footer">
                                            <a href="#">All notifications</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="header-button-item mr-0 js-sidebar-btn">
                                    <i class="zmdi zmdi-menu"></i>
                                </div>
                                <div class="setting-menu js-right-sidebar d-none d-lg-block">
                                    <div class="account-dropdown__body">
                                        <div class="account-dropdown__item">
                                            <a href="/account-settings">
                                                <i class="zmdi zmdi-account"></i>Account</a>
                                        </div>
                                        <div class="account-dropdown__item">
                                            <a href="#">
                                                <i class="zmdi zmdi-settings"></i>Setting</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- END HEADER DESKTOP-->
            <%= yield %>

            <section>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="copyright">
                                <p>Copyright Â© 2018 Colorlib. All rights reserved. Template by <a href="https://colorlib.com">Colorlib</a>.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- END PAGE CONTAINER-->
        </div>
        <!-- Layout Modal -->

        <div class="modal fade" id="AddCampus" tabindex="-1" role="dialog" aria-labelledby="scrollmodalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="scrollmodalLabel">Add Campus</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <form action="/campus/add-campus" method="post" enctype="multipart/form-data" class="form-horizontal">
                <div class="modal-body">
                  <!--Content-->
                  <div class="modal-body">
                    <!--Content-->
                    <div class="card-body card-block">
                      <%= token_tag %>
                      <div class="row form-group">
                        <div class="col col-md-3">
                          <label for="campusid" class=" form-control-label">CampusID</label>
                        </div>
                        <div class="col-12 col-md-9">
                          <input type="text" required="" id="campusid" name="campusid" placeholder="Type campus ID" class="form-control" value="">
                        </div>
                      </div>
                      <div class="row form-group">
                        <div class="col col-md-3">
                          <label for="name" class=" form-control-label">Name</label>
                        </div>
                        <div class="col-12 col-md-9">
                          <input type="text" required="" id="name" name="name" placeholder="Type campus name" class="form-control" value="">
                        </div>
                      </div>
                      <div class="row form-group">
                        <div class="col col-md-3">
                          <label for="address" class=" form-control-label">Address</label>
                        </div>
                        <div class="col-12 col-md-9">
                          <textarea type="text-input" required="" id="address" name="address" placeholder="Content..." class="form-control" style="height: 200px;border: none"></textarea>
                        </div>
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                  <button type="submit" class="btn btn-primary" style="">Confirm</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <!-- Layout Modal End -->

    </div>

    <!-- Jquery JS-->
    <script src=" /assets/admin/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src=" /assets/admin/popper.min.js"></script>
    <script src=" /assets/admin/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src=" /assets/admin/slick.min.js"></script>
    <script src=" /assets/admin/wow.min.js"></script>
    <script src=" /assets/admin/animsition.min.js"></script>
    <script src=" /assets/admin/bootstrap-progressbar.min.js"></script>
    <script src=" /assets/admin/jquery.waypoints.min.js"></script>
    <script src=" /assets/admin/jquery.counterup.min.js"></script>
    <script src=" /assets/admin/circle-progress.min.js"></script>
    <script src=" /assets/admin/perfect-scrollbar.js"></script>
    <script src=" /assets/admin/Chart.bundle.min.js"></script>
    <script src=" /assets/admin/select2.min.js"></script>
    <script src=" /assets/admin/jquery.vmap.js"></script>
    <script src=" /assets/admin/jquery.vmap.min.js"></script>
    <script src=" /assets/admin/jquery.vmap.sampledata.js"></script>
    <script src=" /assets/admin/jquery.vmap.world.js"></script>
    <!-- Main JS-->
    <script src=" /assets/admin/main.js"></script>

</body>

</html>
<!-- end document-->
